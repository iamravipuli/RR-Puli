<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="60dp"
        android:paddingBottom="40dp">

        <!-- App Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RR Puli"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#1A73E8"
            android:gravity="center"
            android:layout_marginBottom="48dp" />

        <!-- Credit & Debit (Side by Side) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCredit"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="Credit"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                app:cornerRadius="12dp"
                app:backgroundTint="#34A853" />

            <View
                android:layout_width="16dp"
                android:layout_height="match_parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDebit"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="Debit"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                app:cornerRadius="12dp"
                app:backgroundTint="#EA4335" />

        </LinearLayout>

        <!-- Interest Calculator -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCalculate"
            android:layout_width="240dp"
            android:layout_height="70dp"
            android:text="Interest Calculator"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            app:cornerRadius="12dp"
            app:backgroundTint="#1A73E8"
            android:layout_marginBottom="20dp" />

        <!-- New Transaction -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNewTransaction"
            android:layout_width="240dp"
            android:layout_height="70dp"
            android:text="New Transaction"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            app:cornerRadius="12dp"
            app:backgroundTint="#FF9800" />

    </LinearLayout>
</ScrollView>
