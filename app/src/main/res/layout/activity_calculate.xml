<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Interest Calculator"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1A73E8"
            android:layout_marginBottom="20dp" />

        <!-- Input Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E8F0FE"
            android:padding="16dp"
            android:layout_marginBottom="20dp">

            <!-- Amount -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Amount (₹)"
                    android:textSize="16sp"
                    android:textColor="#1A73E8"
                    android:gravity="end"
                    android:paddingEnd="12dp" />
                <EditText
                    android:id="@+id/edtAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:inputType="number"
                    android:background="@drawable/rounded_edittext"
                    android:padding="12dp"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Rate -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rate (₹/₹100/mo)"
                    android:textSize="16sp"
                    android:textColor="#1A73E8"
                    android:gravity="end"
                    android:paddingEnd="12dp" />
                <EditText
                    android:id="@+id/edtRate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:inputType="numberDecimal"
                    android:background="@drawable/rounded_edittext"
                    android:padding="12dp"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Start Date -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Start Date"
                    android:textSize="16sp"
                    android:textColor="#1A73E8"
                    android:gravity="end"
                    android:paddingEnd="12dp" />
                <EditText
                    android:id="@+id/edtDate1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:hint="dd/mm/yyyy"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none"
                    android:background="@drawable/rounded_edittext"
                    android:padding="12dp"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- End Date -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="End Date"
                    android:textSize="16sp"
                    android:textColor="#1A73E8"
                    android:gravity="end"
                    android:paddingEnd="12dp" />
                <EditText
                    android:id="@+id/edtDate2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:hint="dd/mm/yyyy"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none"
                    android:background="@drawable/rounded_edittext"
                    android:padding="12dp"
                    android:textSize="16sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btnCalculate"
                android:layout_width="220dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:text="Calculate Interest"
                android:backgroundTint="#1A73E8"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <!-- Result Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E6F4EA"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RESULT"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#34A853"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Principal Amount"
                    android:textSize="16sp"
                    android:textColor="#202124"
                    android:gravity="end"
                    android:paddingEnd="12dp" />
                <TextView
                    android:id="@+id/txtPrincipal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="₹0.00"
                    android:textSize="16sp"
                    android:textColor="#202124" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Interest Amount"
                    android:textSize="16sp"
                    android:textColor="#202124"
                    android:gravity="end"
                    android:paddingEnd="12dp" />
                <TextView
                    android:id="@+id/txtInterest"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="₹0.00"
                    android:textSize="16sp"
                    android:textColor="#34A853"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total Amount"
                    android:textSize="16sp"
                    android:textColor="#202124"
                    android:gravity="end"
                    android:paddingEnd="12dp" />
                <TextView
                    android:id="@+id/txtTotal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="₹0.00"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#1A73E8" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Duration"
                    android:textSize="16sp"
                    android:textColor="#202124"
                    android:gravity="end"
                    android:paddingEnd="12dp" />
                <TextView
                    android:id="@+id/txtDuration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0y 0m 0d"
                    android:textSize="16sp"
                    android:textColor="#5F6368" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="#34A853"
                android:gravity="center"
                android:layout_marginTop="12dp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
